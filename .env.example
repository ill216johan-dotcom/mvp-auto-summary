# ============================================================
# MVP Auto-Summary — Environment Variables
# Copy to .env and fill in actual values:
#   cp .env.example .env
# ============================================================

# --- General ---
TIMEZONE=Europe/Moscow

# --- n8n ---
N8N_PORT=5678
N8N_USER=admin
N8N_PASSWORD=CHANGE_ME_STRONG_PASSWORD
N8N_ENCRYPTION_KEY=GENERATE_32_CHAR_RANDOM_STRING
N8N_WEBHOOK_URL=http://YOUR_VPS_IP:5678

# --- PostgreSQL ---
POSTGRES_PORT=5432
POSTGRES_USER=n8n
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=n8n

# --- SurrealDB (for open-notebook) ---
SURREAL_PORT=8000
SURREAL_USER=root
SURREAL_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# --- open-notebook ---
NOTEBOOK_PORT=8888
NOTEBOOK_DEFAULT_MODEL=openai/glm-4.7-flashx
NOTEBOOK_EMBEDDING_MODEL=
OPEN_NOTEBOOK_URL=http://open-notebook:8888
OPEN_NOTEBOOK_TOKEN=password

# --- Whisper (self-hosted STT, replaces Yandex SpeechKit) ---
# Model: tiny|base|small|medium|large-v3
# tiny=быстро но неточно, medium=оптимально для русского, large-v3=максимальное качество
WHISPER_PORT=9000
WHISPER_MODEL=medium

# --- GLM-4 (ZhipuAI) ---
GLM4_API_KEY=YOUR_ZHIPUAI_API_KEY
GLM4_BASE_URL=https://api.z.ai/api/paas/v4
GLM4_MODEL=glm-4.7-flashx

# --- Telegram ---
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_CHAT_ID=YOUR_TELEGRAM_CHAT_ID
